{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "lib": ["ES6", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "outDir": "./lib",
    "target": "ES6",
    "strict": true,
    "strictNullChecks": false,
    "types": [],
    "jsx": "react",
    "paths": {
      "react": ["node_modules/@types/react"],
      "react-dom": ["node_modules/@types/react-dom"]
    }
  },
  "include": ["src/**/*"]
}
